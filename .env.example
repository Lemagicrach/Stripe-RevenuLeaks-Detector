# ==================================
# DATABASE & AUTHENTICATION
# ==================================
# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# ==================================
# STRIPE CONFIGURATION
# ==================================
# Stripe API Keys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Stripe Connect (for Stripe Analytics feature)
STRIPE_CLIENT_ID=ca_xxxxx
# Optional: set explicit OAuth callback URL to avoid redirect URI mismatches.
# Must exactly match one Redirect URI in Stripe Connect settings.
# Local dev example: http://localhost:3000/api/stripe/connect
# Production example: https://yourdomain.com/api/stripe/connect
STRIPE_CONNECT_REDIRECT_URI=

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_PRO_MONTHLY=price_xxxxx
STRIPE_PRICE_ULTRA_MONTHLY=price_xxxxx
STRIPE_PRICE_MEGA_MONTHLY=price_xxxxx
STRIPE_STARTER_PRICE_ID=price_xxxxx
STRIPE_PROFESSIONAL_PRICE_ID=price_xxxxx
STRIPE_BUSINESS_PRICE_ID=price_xxxxx
STRIPE_ENTERPRISE_PRICE_ID=price_xxxxx
STRIPE_REV_PILOT_STARTER_PRICE_ID=price_xxxxx
STRIPE_REV_PILOT_PRO_PRICE_ID=price_xxxxx
STRIPE_REV_PILOT_BUSINESS_PRICE_ID=price_xxxxx

# ==================================
# SECURITY & ENCRYPTION
# ==================================
# CRITICAL: Generate a secure 32-byte (64 character) hex key for AES-256 encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-64-character-hex-encryption-key-here

# CRON Secret for protecting cron job endpoints
# Generate with: openssl rand -base64 32
CRON_SECRET=supersecret123

# ==================================
# RATE LIMITING (Upstash Redis)
# ==================================
# Optional but HIGHLY RECOMMENDED for production
# Sign up at https://upstash.com and create a Redis database
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# ==================================
# ERROR TRACKING & MONITORING
# ==================================
# Sentry for error tracking and monitoring (https://sentry.io)
# HIGHLY RECOMMENDED for production
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project

# ==================================
# EMAIL NOTIFICATIONS
# ==================================
# SendGrid for transactional emails
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Stripe Analytics

# Optional (recommended) - Resend for Revenue Leak reports (Phase 3)
RESEND_API_KEY=
RESEND_FROM_EMAIL="RevPilot <reports@yourdomain.com>"
OPENAI_API_KEY=sk-xxxx

# ==================================
# ANALYTICS (Optional)
# ==================================
NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxx
NEXT_PUBLIC_GA_ID=G-XXXXX

# ==================================
# APP CONFIGURATION
# ==================================
NEXT_PUBLIC_APP_URL=https://revpilot-net.vercel.app
NEXT_PUBLIC_BASE_URL=https://revpilot-net.vercel.app
NODE_ENV=development

# ==================================
# TEMPLATE MODE
# ==================================
# When true, RevPilot behaves like a Starter Kit and returns demo metrics by default.
NEXT_PUBLIC_TEMPLATE_MODE=true

# Comma-separated allowlist for /admin/settings and /api/admin/* endpoints
ADMIN_EMAILS=you@example.com
